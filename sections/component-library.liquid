<div class="py-16 bg-base-100">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold mb-12">Component Library</h1>

    <!-- Color Swatches -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-6">Colors</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
