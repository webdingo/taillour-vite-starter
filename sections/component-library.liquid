          <div class="h-24 bg-primary-focus rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Primary Focus</div>
            <div class="text-base-content/70">bg-primary-focus</div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-primary-content rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Primary Content</div>
            <div class="text-base-content/70">bg-primary-content</div>
          </div>
        </div>

        <!-- Secondary Colors -->
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-secondary rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Secondary</div>
            <div class="text-base-content/70">bg-secondary</div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-secondary-focus rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Secondary Focus</div>
            <div class="text-base-content/70">bg-secondary-focus</div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-secondary-content rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Secondary Content</div>
            <div class="text-base-content/70">bg-secondary-content</div>
          </div>
        </div>

        <!-- Accent Colors -->
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-accent rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Accent</div>
            <div class="text-base-content/70">bg-accent</div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-accent-focus rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Accent Focus</div>
            <div class="text-base-content/70">bg-accent-focus</div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-accent-content rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Accent Content</div>
            <div class="text-base-content/70">bg-accent-content</div>
          </div>
        </div>

        <!-- Neutral Colors -->
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-neutral rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Neutral</div>
            <div class="text-base-content/70">bg-neutral</div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-neutral-focus rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Neutral Focus</div>
            <div class="text-base-content/70">bg-neutral-focus</div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="h-24 bg-neutral-content rounded-lg"></div>
          <div class="text-sm">
            <div class="font-bold">Neutral Content</div>
            <div class="text-base-content/70">bg-neutral-content</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Typography -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-6">Typography</h2>
      <div class="space-y-8">
        <div>
          <h1 class="text-5xl font-bold mb-2">Heading 1</h1>
          <div class="text-base-content/70">text-5xl font-bold</div>
        </div>
        <div>
          <h2 class="text-4xl font-bold mb-2">Heading 2</h2>
          <div class="text-base-content/70">text-4xl font-bold</div>
        </div>
        <div>
          <h3 class="text-3xl font-bold mb-2">Heading 3</h3>
          <div class="text-base-content/70">text-3xl font-bold</div>
        </div>
        <div>
          <h4 class="text-2xl font-bold mb-2">Heading 4</h4>
          <div class="text-base-content/70">text-2xl font-bold</div>
        </div>
        <div>
          <h5 class="text-xl font-bold mb-2">Heading 5</h5>
          <div class="text-base-content/70">text-xl font-bold</div>
        </div>
        <div>
          <h6 class="text-lg font-bold mb-2">Heading 6</h6>
          <div class="text-base-content/70">text-lg font-bold</div>
        </div>
        <div>
          <div class="text-base mb-2">Body text - The quick brown fox jumps over the lazy dog.</div>
          <div class="text-base-content/70">text-base</div>
        </div>
        <div>
          <div class="text-sm mb-2">Small text - The quick brown fox jumps over the lazy dog.</div>
          <div class="text-base-content/70">text-sm</div>
        </div>
      </div>
    </section>

    <!-- Spacing -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-6">Spacing</h2>
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-bold mb-4">Padding</h3>
          <div class="flex flex-col gap-4">
            <div class="p-1 bg-base-200 rounded">
              <div class="bg-primary/20 h-8 w-full flex items-center justify-center">
                <div class="text-sm">p-1</div>
              </div>
            </div>
            <div class="p-2 bg-base-200 rounded">
              <div class="bg-primary/20 h-8 w-full flex items-center justify-center">
                <div class="text-sm">p-2</div>
              </div>
            </div>
            <div class="p-4 bg-base-200 rounded">
              <div class="bg-primary/20 h-8 w-full flex items-center justify-center">
                <div class="text-sm">p-4</div>
              </div>
            </div>
            <div class="p-8 bg-base-200 rounded">
              <div class="bg-primary/20 h-8 w-full flex items-center justify-center">
                <div class="text-sm">p-8</div>
              </div>
            </div>
          </div>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Margin</h3>
          <div class="flex flex-col gap-4">
            <div class="bg-base-200 rounded">
              <div class="m-1">
                <div class="bg-secondary/20 h-8 flex items-center justify-center">
                  <div class="text-sm">m-1</div>
                </div>
              </div>
            </div>
            <div class="bg-base-200 rounded">
              <div class="m-2">
                <div class="bg-secondary/20 h-8 flex items-center justify-center">
                  <div class="text-sm">m-2</div>
                </div>
              </div>
            </div>
            <div class="bg-base-200 rounded">
              <div class="m-4">
                <div class="bg-secondary/20 h-8 flex items-center justify-center">
                  <div class="text-sm">m-4</div>
                </div>
              </div>
            </div>
            <div class="bg-base-200 rounded">
              <div class="m-8">
                <div class="bg-secondary/20 h-8 flex items-center justify-center">
                  <div class="text-sm">m-8</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Grid System -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-6">Grid System</h2>
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-bold mb-4">2 Columns</h3>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-base-200 p-4 rounded text-center">1</div>
            <div class="bg-base-200 p-4 rounded text-center">2</div>
          </div>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">3 Columns</h3>
          <div class="grid grid-cols-3 gap-4">
            <div class="bg-base-200 p-4 rounded text-center">1</div>
            <div class="bg-base-200 p-4 rounded text-center">2</div>
            <div class="bg-base-200 p-4 rounded text-center">3</div>
          </div>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">4 Columns</h3>
          <div class="grid grid-cols-4 gap-4">
            <div class="bg-base-200 p-4 rounded text-center">1</div>
            <div class="bg-base-200 p-4 rounded text-center">2</div>
            <div class="bg-base-200 p-4 rounded text-center">3</div>
            <div class="bg-base-200 p-4 rounded text-center">4</div>
          </div>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Responsive Grid</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div class="bg-base-200 p-4 rounded text-center">1</div>
            <div class="bg-base-200 p-4 rounded text-center">2</div>
            <div class="bg-base-200 p-4 rounded text-center">3</div>
            <div class="bg-base-200 p-4 rounded text-center">4</div>
          </div>
        </div>
      </div>
    </section>

    <!-- E-commerce Components -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-6">E-commerce Components</h2>
      
      <!-- Buttons -->
      <div class="mb-12">
        <h3 class="text-xl font-bold mb-4">Buttons</h3>
        <div class="flex flex-wrap gap-4">
          <button class="btn btn-primary">Add to Cart</button>
          <button class="btn btn-secondary">Buy Now</button>
          <button class="btn btn-accent">Wishlist</button>
          <button class="btn btn-outline">Learn More</button>
          <button class="btn btn-ghost">Quick View</button>
          <button class="btn btn-link">View Details</button>
        </div>
      </div>

      <!-- Product Card -->
      <div class="mb-12">
        <h3 class="text-xl font-bold mb-4">Product Card</h3>
        <div class="card w-80 bg-base-100 shadow-xl">
          <figure class="relative">
            <img src="https://placehold.co/400x400" alt="Product" width="400" height="400" class="w-full h-80 object-cover" />
            <div class="absolute top-2 right-2">
              <button class="btn btn-circle btn-ghost">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </button>
            </div>
          </figure>
          <div class="card-body">
            <h2 class="card-title">Product Name</h2>
            <div class="text-base-content/70">$99.99</div>
            <div class="card-actions justify-start">
              <button class="btn btn-primary">Add to Cart</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Elements -->
      <div class="mb-12">
        <h3 class="text-xl font-bold mb-4">Form Elements</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Input Fields -->
          <div class="space-y-4">
            <h4 class="font-bold">Input Fields</h4>
            <div class="form-control w-full">
              <label class="label">
                <span class="label-text">Email</span>
              </label>
              <input type="email" placeholder="Enter your email" class="input input-bordered w-full" />
            </div>
            <div class="form-control w-full">
              <label class="label">
                <span class="label-text">Password</span>
              </label>
              <input type="password" placeholder="Enter your password" class="input input-bordered w-full" />
            </div>
          </div>

          <!-- Select & Checkbox -->
          <div class="space-y-4">
            <h4 class="font-bold">Select & Checkbox</h4>
            <div class="form-control w-full">
              <label class="label">
                <span class="label-text">Size</span>
              </label>
              <select class="select select-bordered w-full">
                <option disabled selected>Pick a size</option>
                <option>S</option>
                <option>M</option>
                <option>L</option>
                <option>XL</option>
              </select>
            </div>
            <div class="form-control">
              <label class="label cursor-pointer">
                <span class="label-text">Remember me</span>
                <input type="checkbox" class="checkbox checkbox-primary" />
              </label>
            </div>
          </div>
        </div>
      </div>

      <!-- Badges & Tags -->
      <div class="mb-12">
        <h3 class="text-xl font-bold mb-4">Badges & Tags</h3>
        <div class="flex flex-wrap gap-4">
          <div class="badge badge-primary">New</div>
          <div class="badge badge-secondary">Sale</div>
          <div class="badge badge-accent">Limited</div>
          <div class="badge badge-outline">Out of Stock</div>
          <div class="badge badge-ghost">Featured</div>
        </div>
      </div>

      <!-- Alerts -->
      <div class="mb-12">
        <h3 class="text-xl font-bold mb-4">Alerts</h3>
        <div class="space-y-4">
          <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Item added to cart successfully!</span>
          </div>
          <div class="alert alert-warning">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span>Only 2 items left in stock!</span>
          </div>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Error adding item to cart. Please try again.</span>
          </div>
        </div>
      </div>

      <!-- Breadcrumbs -->
      <div class="mb-12">
        <h3 class="text-xl font-bold mb-4">Breadcrumbs</h3>
        <div class="text-sm breadcrumbs">
          <ul>
            <li><a>Home</a></li>
            <li><a>Collections</a></li>
            <li><a>Category</a></li>
            <li>Product Name</li>
          </ul>
        </div>
      </div>

      <!-- Pagination -->
      <div class="mb-12">
        <h3 class="text-xl font-bold mb-4">Pagination</h3>
        <div class="btn-group">
          <button class="btn btn-outline">«</button>
          <button class="btn btn-outline">1</button>
          <button class="btn btn-outline btn-active">2</button>
          <button class="btn btn-outline">3</button>
          <button class="btn btn-outline">»</button>
        </div>
      </div>
    </section>
  </div>
</div>

