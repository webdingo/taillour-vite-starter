{% assign menu_handle = section.settings.menu %}
<nav class="bg-black w-full">
  <div class="container mx-auto w-full">
    <ul class="menu menu-horizontal px-4 py-2 justify-start gap-6 w-full">
      {% for link in linklists[menu_handle].links %}
        <li>
          <a href="{{ link.url }}" class="text-white hover:bg-neutral-800">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</nav>

{% schema %}
{
  "name": "Nav",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
