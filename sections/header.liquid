<header class="container">
  {% comment %}
  Logos will typically be SVG's, so no theme settings for this for maximum control :)
  {% endcomment %}
  <div id="btn-menu" data-device="mobile" class="flex middle">
    <button type="button" onclick="toggleNav();">Menu</button>
  </div>
  <div id="logo">
    <a href="/">
    <svg width="200" height="40" viewBox="0 0 200 40" xmlns="http://www.w3.org/2000/svg">
      <g fill="none" stroke="#000" stroke-width="2">
        <!-- Book -->
        <rect x="5" y="8" width="24" height="24" rx="2"/>
        <path d="M10 8 V32"/>
        <path d="M5 8 C5 8 15 8 17 12"/>
        <path d="M29 8 C29 8 19 8 17 12"/>
        
        <!-- Pages -->
        <line x1="13" y1="12" x2="26" y2="12"/>
        <line x1="13" y1="16" x2="26" y2="16"/>
        <line x1="13" y1="20" x2="26" y2="20"/>
        <line x1="13" y1="24" x2="26" y2="24"/>
        <line x1="13" y1="28" x2="26" y2="28"/>
      </g>
      
      <!-- Text -->
      <text x="40" y="25" font-family="system-ui, sans-serif" font-size="16" font-weight="700" fill="#000">
        Lumo Library
      </text>
    </svg>
    </a>
  </div>
  <div class="flex align-center center middle" data-device="desktop">
    {% render 'search-form' %}
  </div>
  <div class="flex align-right middle">
    <div>
      <ul class="flex">
        <li data-device="desktop"><a href="/account">Account</a></li>
        <li><a href="{{ routes.cart_url }}">Cart (<span class="js--cart-counter">{{ cart.item_count }}</span>)</a></li>
      </ul>
    </div>
  </div>
</header>

<div data-device="mobile">
  {% render 'search-form', id: 'header-search-mobile' %}
</div>
