<footer class="py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Navigation Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">Navigation</h3>
        <ul class="menu menu-vertical gap-2">
          {% assign menu_handle = section.settings.menu | default: "footer" %}
          {% for link in linklists[menu_handle].links %}
            <li>
              <a href="{{ link.url }}" class="hover:text-primary">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">Quick Links</h3>
        <ul class="menu menu-vertical gap-2">
          <li><a href="/account" class="hover:text-primary">My Account</a></li>
          <li><a href="/cart" class="hover:text-primary">Cart</a></li>
          <li><a href="/search" class="hover:text-primary">Search</a></li>
          <li><a href="/pages/contact" class="hover:text-primary">Contact Us</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h3 class="text-lg font-bold mb-4">Stay Updated</h3>
        <p class="mb-4">Subscribe to our newsletter for the latest updates and offers.</p>
        {% form 'customer', class: 'flex flex-col gap-2' %}
          <input 
            type="email" 
            name="contact[email]" 
            placeholder="Enter your email" 
            class="input input-bordered w-full"
            required
          >
          <button type="submit" class="btn btn-primary">Subscribe</button>
        {% endform %}
      </div>

      <!-- Social Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">Follow Us</h3>
        <div class="flex gap-4">
          <a href="#" class="btn btn-ghost btn-circle">
